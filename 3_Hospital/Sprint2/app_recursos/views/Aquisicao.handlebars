
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/fixedcolumns/3.3.0/js/dataTables.fixedColumns.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

<div class="mb-4">
  <h3>
    <i class="fas fa-handshake" aria-hidden="true"></i>
    Aquisição
  </h3>
</div>

<hr>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <p class="lead">Escolha um dos itens disponíveis pelos fornecedores.</p>
</div>

<form action="{{#if hos}}
                /hospital/{{hos.hos_cnes_code}}
              {{else}}
                /fornecedor/FORNECEDOR_ID
              {{/if}}" 
              method="POST">
  <div class="card mt-4 mb-4">
    <div class="card-body">
      
        <table id="listaEstoque" class="table table-hover" style="width:100%">
          <thead>
            <tr class="table-primary">
                <th class="text-center">FORNECEDOR</th>
                <th class="text-center">TIPO</th>
                <th class="text-center">MATERIAL</th>
                <th class="text-center">QUANTIDADE</th>
            </tr>
          </thead>
          <tbody>
                <tr>
                  <!--  AQUI O CÓDIGO PARA MOSTRAR O PRODUTO DO FORNECEDOR -->
                  <td>
                    <select name="inputProvider" class="form-control">
                      <option>-- Selecione --</option>
                      <option value="Fulano LTDA">Fornecedor Fulano</option>
                    </select>
                  </td>
                  <td>
                    <select name="inputType" class="form-control">
                      <option>-- Selecione --</option>
                      <option value="Descartáveis">Descartáveis</option>
                    </select>
                  </td>
                  <td>
                    <select name="inputProduct" class="form-control">
                      <option>-- Selecione --</option>
                      <option value="Teste Covid-19">Teste Covid-19</option>
                    </select>
                  </td>
                  <td>
                      <input type="number" name="inputQty" class="form-control">
                  </td>
                </tr>
          </tbody>
        </table>
    </div>
  </div>

  <div class="form-row text-center">
          <button type="submit" class="btn btn-success mr-2">Adquirir</button> 
          <a class=" btn btn-danger" href="/hospital/{{hos.hos_cnes_code}}/estoque" role="button">Cancelar</a>
  </div>
 </form>

</body>