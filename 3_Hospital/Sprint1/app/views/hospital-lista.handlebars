<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
  integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
<link rel='stylesheet' href='https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css' />
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css"></script>
<script src="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css"></script>
<br>
<a href="/Hospital/New" class="float-right btn btn-primary">Cadastrar novo Hospital</a>
<h3>
  <i class="fa fa-h-square" aria-hidden="true"></i>
  Hospitais
</h3>
<br>
<hr>

<table id="listaHospital" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>CNPJ</th>
      <th>CNES</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each hos}}
    <tr>
      <td>{{hos_id}}</td>
      <td>{{hos_name}}</td>
      <td>{{hos_cnpj}}</td>
      <td>{{hos_cnes_code}}</td>
      <td class="text-center">
        <div class="form-row text-center float-right">
          <button type="button" class="btn btn-default" 
            onclick="window.location.href='/hospital/{{hos_id}}/employee/sts/active'" alt="Cadastro de Funcionários" data-toggle="tooltip" data-placement="top" title="Cadastro de Funcionários">
            <i class="fa fa-user-md" ></i>
            </button>

            <button id="{{hsp_id}}" type="button" class="btn btn-default" data-toggle="modal" alt="Cadastro de Procedimentos" title="Procedimentos Médicos"
          data-target="#mdUpdate{{hos_id}}">
              <i class="fa fa-list-alt" ></i>
            </button>
            <form action="/hospital/{{hos_id}}"  method="get">
              <button id="{{hos_id}}" type="submit" class="btn btn-default" alt="Editar hospital" data-toggle="tooltip" data-placement="top" title="Editar hospital">
                <i class="fa fa-edit"></i>
              </button>
            </form>
            <button id="{{hos_id}}" type="button" class="btn btn-default" data-toggle="modal" alt="Apagar hospital" data-toggle="tooltip" data-placement="top" title="Apagar hospital"
              data-target="#mdDelete{{hos_id}}">
              <i class="fa fa-trash"></i>
            </button>
</div>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{#each hos}}
<!-- Modal Update -->
<div class="modal fade bd-example-modal-lg" id="mdUpdate{{hos_id}}" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel{{hos_id}}"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="updateModalLabel{{hos_id}}">Procedimentos Médicos</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- FORM ATUALIZACAO  -->
        <table class='table'>
            {{#each @root.hos_med_proc}}
              {{#ifEquals hos_id ../hos_id }}
                {{#each @root.med_proc}}
                  {{#ifEquals med_proc_id ../med_proc_id}}
                    <tr>
                        <td>
                        <input type="checkbox" name="inputProcID" value="{{med_proc_id}}" class="checkme" />
                        </td>
                        <td>{{med_proc_desc}}</td>
                    </tr>
                  {{/ifEquals}}
                {{/each}}
              {{/ifEquals}}
            {{/each}}
        </table>
          <!--  FIM FORM ATUALIZACAO  --->
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-success">Atualizar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{#each hos}}
<!-- Modal Delete-->
<div class="modal fade bd-example-modal-lg" id="mdDelete{{hos_id}}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Desativar</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Deseja apagar o registro de
        <span id="info"> {{hos_name}} </span>
        ?
      </div>
      <div class="modal-footer">
        <form action="/Hospital/delete/{{hos_id}}" method="get">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-danger">Apagar</button>
        </form>

      </div>
    </div>
  </div>

</div>
{{/each}}

<form action="/" method="GET">
  <div class="form-row text-center">
          <button type="submit" class=" btn btn-primary" href="/" >Voltar</button> 
  </div>  
</form>

<script>
  $(document).ready(function () {
    $('#listaHospital').DataTable();
  });


 $(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>
